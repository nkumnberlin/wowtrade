---
import Layout from "../components/global/Layout/Layout.astro"
import isAuthenticated from "../../utils/isAuthenticated"
const validSession = isAuthenticated(Astro.request.headers.get("cookie"))
if (validSession) return Astro.redirect("/orders/view")
---

<Layout title="Authenticate your Account">
	<section class="p-6 flex-1 flex flex-col justify-between">
		<div
			class="max-w-xl mx-auto flex flex-col justify-center flex-1 space-y-10"
		>
			<div class="space-y-2 text-center">
				<h1 class="text-4xl font-semibold">Authenticate</h1>
			</div>
			<a
				href="http://localhost:3000/login"
				class="flex flex-col rounded-2xl border border-gray-500 p-6 text-center transition duration-300 ease-in-out hover:border-blue-500 hover:bg-blue-500 hover:text-white focus:border-blue-500 focus:bg-blue-500"
			>
				<span class="text-xl font-medium">ðŸ“– Authenticate</span>
			</a>
		</div>
	</section>
</Layout>
